<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="24" author="msaddarov">
  
   <createTable tableName="order_status" remarks="order status">
      <column name="id" type="bigint">
        <constraints nullable="false" unique="true" primaryKey="true"/>
      </column>
      <column name="code" type="varchar(50)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="description" type="varchar(400)">
        <constraints nullable="false" unique="false"/>
      </column>      
    </createTable>  
    
        
    <createTable tableName="order" remarks="order">
      <column name="id" type="bigint">
        <constraints nullable="false" unique="true" primaryKey="true"/>
      </column>
      <column name="customer_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="reference" type="varchar(256)">
        <constraints nullable="false" unique="false"/>
      </column>
	  <column name="billing_name" type="varchar(100)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="delivery_name" type="varchar(100)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="billing_address_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="purchase_date" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="order_status_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="delivery_address_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
     </createTable> 
     
      <addForeignKeyConstraint baseTableName="order" baseColumnNames="customer_id"
      	constraintName="order_cust_id_fk"
      	referencedTableName="customer" referencedColumnNames="id"/>    
      
      <addForeignKeyConstraint baseTableName="order" baseColumnNames="billing_address_id"
      	constraintName="order_billaddr_id_fk"
      	referencedTableName="address" referencedColumnNames="id"/>    
      
      <addForeignKeyConstraint baseTableName="order" baseColumnNames="delivery_address_id"
      	constraintName="order_delivaddr_id_fk"
      	referencedTableName="address" referencedColumnNames="id"/>    
      
      <addForeignKeyConstraint baseTableName="order" baseColumnNames="order_status_id"
      	constraintName="order_ordstatus_id_fk"
      	referencedTableName="order_status" referencedColumnNames="id"/>    
      	      
      
     <createTable tableName="order_product" remarks="order status"> <!-- no tax support -->
      <column name="id" type="bigint">
        <constraints nullable="false" unique="true" primaryKey="true"/>
      </column>
      <column name="product_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="order_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>      
      <column name="quantity" type="int">
        <constraints nullable="false" unique="false"/>
      </column>         
      <column name="price" type="decimal">
        <constraints nullable="false" unique="false"/>
      </column>           
      <column name="currency" type="varchar(10)">
        <constraints nullable="true" unique="false"/>
      </column>      
    </createTable>  
    
    
     <addForeignKeyConstraint baseTableName="order_product" baseColumnNames="product_id"
      	constraintName="order_product_pid_fk"
      	referencedTableName="product" referencedColumnNames="id"/>    
      
     <addForeignKeyConstraint baseTableName="order_product" baseColumnNames="order_id"
      	constraintName="order_product_ordid_fk"
      	referencedTableName="order" referencedColumnNames="id"/>    
      	      
    
  </changeSet>
</databaseChangeLog>