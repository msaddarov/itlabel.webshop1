    </insert>

    <insert tableName="order_status">
      <column name="id" value="2"/>
      <column name="code" value="INPROGRESS"/>
      <column name="description" value="In Progress"/>
    </insert>
   
    <insert tableName="order_status">
      <column name="id" value="3"/>
      <column name="code" value="DELIVERY"/>
